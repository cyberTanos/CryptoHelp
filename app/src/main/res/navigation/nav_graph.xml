<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/authFragment">

    <fragment
        android:id="@+id/authFragment"
        android:name="com.tanya.finhelp.screens.auth.AuthFragment"
        android:label="AuthFragment"
        tools:layout="@layout/fragment_auth">
        <action
            android:id="@+id/to_registrationFragment"
            app:destination="@id/registrationFragment" />
        <action
            android:id="@+id/to_coinsFragment"
            app:destination="@id/coinsFragment"
            app:popUpTo="@id/authFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/registrationFragment"
        android:name="com.tanya.finhelp.screens.registration.RegistrationFragment"
        android:label="RegistrationFragment"
        tools:layout="@layout/fragment_registration">
        <action
            android:id="@+id/to_authFragment"
            app:destination="@id/authFragment"
            app:popUpTo="@id/authFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/coinsFragment"
        android:name="com.tanya.finhelp.screens.coins.CoinsFragment"
        android:label="CoinsFragment"
        tools:layout="@layout/fragment_coins">
        <action
            android:id="@+id/action_coinsFragment_to_authFragment"
            app:destination="@id/authFragment"
            app:popUpTo="@id/coinsFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <dialog
        android:id="@+id/coinInfoBottomSheet"
        android:name="com.tanya.finhelp.screens.coinInfo.CoinInfoBottomSheet"
        android:label="CoinInfoBottomSheet"
        tools:layout="@layout/bottom_sheet_coin_info" />

</navigation>
